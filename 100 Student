using System;
using System.Collections.Generic;
using System.Linq;
using System.Text.RegularExpressions;

class Lesson {
  string _name;
  double _score;
  int _ratio;
  public string GetName()
  {
    return _name;
  }
  public void SetName(string value)
  {
    _name = value;
  }

  public double GetScore(){
    return _score;
  }

  public void SetScore(double value){
    _score = value;
  }

  public double GetRatio(){
    return _ratio;
  }

  public Lesson(string value,int r){
    Random rnd = new Random();
    double num = rnd.NextDouble();

    _name = value;
    _score = num * 20;
    _ratio = r;
  }
}

class Student {
    int _id;
    string _name;
    Lesson[] _lessons = new Lesson[]{
      new Lesson("math",3),
      new Lesson("algorithm",3),
      new Lesson("test",2),
    };
    public int GetId()
    {
        return _id;
    }
    public string GetName(){
      return _name;
    }
    public void SetId(int value)
    {
        _id = value;
    }

    public Student(string value){
      _name = value;
    }

    public double GetAvg(){
      double sum = 0;
      double ratioSum = 0;
      for (int i = 0; i < _lessons.Length; i++)
      {
        ratioSum += _lessons[i].GetRatio();
        sum += _lessons[i].GetRatio() * _lessons[i].GetScore();
      }
      return sum / ratioSum;
    }
    public double GetAvgByNames(string[] names){
      double sum = 0;
      double ratioSum = 0;
      for (int i = 0; i < _lessons.Length; i++)
      {
        int find = Array.IndexOf(names,_lessons[i].GetName());

        if( find != -1){
          ratioSum += _lessons[i].GetRatio();
          sum += _lessons[i].GetRatio() * _lessons[i].GetScore();
        }
      }
      return sum / ratioSum;
    }

    public void PrintLossons(){
      for (int i = 0; i < _lessons.Length; i++)
      {
        Console.WriteLine("Lesson: " + _lessons[i].GetName() + " Score: " + _lessons[i].GetScore() + " Ratio: " + _lessons[i].GetRatio());
      }
    }
}

